<form class="grid form-horizontal" role="form">

  {{!-- invisible template --}}
  <div class="form-group hide-soft" data-name="">
    <div class="col-xs-4">
      <input type="text" class="form-control key" value="">
    </div>

    <div class="col-xs-7">
      <input type="text" class="form-control value" id="grid-param-" value="">
    </div>

    <div class="col-xs-1">
      <i class="fa fa-times-circle text-danger remove"></i>
    </div>
  </div>
  {{!-- invisible template --}}

  {{#each params}}
    <div class="form-group" data-name="{{@key}}">
      {{#if ../edit_keys}}
        <div class="col-xs-4">
          <input type="text" class="form-control key" value="{{@key}}">
        </div>
      {{else}}
        <label for="grid-param-{{@key}}" class="col-xs-4 control-label">{{humanize_parameter_name @key}}</label>
      {{/if}}

      <div class="col-xs-7">
        <input type="text" class="form-control value" id="grid-param-{{@key}}" value="{{this}}">
      </div>

      {{#if ../edit_keys}}
        <div class="col-xs-1">
          <i class="fa fa-times-circle text-danger remove"></i>
        </div>
      {{/if}}

    </div>
  {{/each}}

  {{#if can_add}}
  <div>
    <button class="btn btn-default add" type="button"><i class="fa fa-plus-circle"></i> Add new</button>
  </div>
  {{/if}}

</form>
